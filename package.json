{
    "name": "yara",
    "displayName": "YARA",
    "description": "Syntax highlighting and snippets support for the YARA pattern matching language",
    "version": "1.2.2",
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#A4A4A4",
        "theme": "dark"
    },
    "publisher": "infosec-intern",
    "license": "MIT License - full document in LICENSE.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/infosec-intern/textmate-yara"
    },
    "bugs": {
        "url": "https://github.com/infosec-intern/textmate-yara/issues"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "configuration": [
            {
                "title": "YARA configuration",
                "properties": {
                    "yara.compileOnSave": {
                        "type": "boolean",
                        "default": true,
                        "description": "Compile the active rule on each save and draw diagnostics on screen"
                    },
                    "yara.installPath": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "Path to the 'yarac' executable"
                    }
                }
            }
        ],
        "grammars": [
            {
                "language": "yara",
                "scopeName": "source.yara",
                "path": "yara/syntaxes/yara.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "yara",
                "aliases": [
                    "yara",
                    "yara-syntax",
                    "yaralang",
                    "YARA",
                    "Yara"
                ],
                "extensions": [
                    ".yara",
                    ".yar"
                ],
                "configuration": "yara/yara.configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "yara",
                "path": "yara/snippets/yara.json"
            }
        ]
    },
    "main": "out/yara/src/extension",
    "activationEvents": [
        "onLanguage:yara"
    ],
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "mocha"
    },
    "devDependencies": {
        "child_process": "^1.0.2",
        "path": "^0.12.7",
        "tempy": "^0.2.1",
        "typescript": "^2.7.2",
        "vscode": "^1.1.10",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}